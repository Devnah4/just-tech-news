{{!-- Generates the comment viewable post --}}
{{> post-info post}}

{{!-- Makes Form visible only when logged in --}}
{{#if loggedIn}}
{{!-- Creates comment submission form --}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

{{!-- Creates comment sections --}}
<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{!-- Only validates ig logged in --}}
{{#if loggedIn}}
{{!-- Calls comment and upvote scripts --}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}